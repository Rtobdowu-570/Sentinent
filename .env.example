# Database
# For Vercel Postgres, use the connection string from your Vercel dashboard
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Gemini API (for email generation)
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=xxxxx

# Tavily API (for news search)
# Get from https://tavily.com
TAVILY_API_KEY=xxxxx

# Perplexity API (alternative for news search)
# Get from https://www.perplexity.ai
PERPLEXITY_API_KEY=xxxxx

# Jina AI Reader (for web scraping fallback)
# Get from https://jina.ai
JINA_API_KEY=xxxxx

# Upstash Redis (for rate limiting)
# Get from https://upstash.com
UPSTASH_REDIS_REST_URL=xxxxx
UPSTASH_REDIS_REST_TOKEN=xxxxx

# Optional: Stripe (for subscription management)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
